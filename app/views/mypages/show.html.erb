<div class="bg-red-50 py-6 sm:py-8 lg:py-12">
  <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
    <div class="mb-4 text-center text-2xl font-bold text-gray-800 md:mb-8 lg:text-3xl">プロフィール</div>
    <div class= 'mx-auto max-w-lg rounded-lg border bg-white'>
      <%= form_with model: @user, url: mypage_path do |f| %>
      <div class="flex flex-col gap-4 p-4 md:p-8">
        <div class="rounded-full overflow-hidden w-32 h-32 mx-auto mb-6">
          <% if @user.avatar.present? %>
            <%= image_tag @user.avatar.url, class: "object-cover w-full h-full" %>
          <% else %>
            <%= image_tag "sample.png", class: "object-cover w-full h-full" %>
          <% end %>
        </div>
        <div>
          <%= f.label :name,  "プロフィール画像", class: 'mb-2 inline-block text-sm text-gray-800 sm:text-base' %>
          <%= f.file_field :avatar, class: "w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-customorange ring-opacity-40 transition duration-100 focus:ring", accept: 'image/*' %>
          <%= f.hidden_field :avatar_cache %>
        </div>
        <div>
          <%= f.label :name,  "名前", class: 'mb-2 inline-block text-sm text-gray-800 sm:text-base' %>
          <%= f.text_field :name, class: 'ring-customorange w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-opacity-40 transition duration-100 focus:ring', autocomplete: "name" %>
        </div>
        <div class="card-actions">
          <%= link_to "編集", edit_mypage_path, class:"text-base-content btn btn-primary", data: { turbo_stream: true } %>
        </div>
      </div>

      <div class="flex justify-end pr-5 pb-4">
        <%= link_to "アカウント削除", `#`, class:"text-base-content btn btn-error btn-sm bg-opacity-90", data: {turbo_method: :delete, turbo_confirm: "本当にアカウントを削除しますか" } %>
      </div>
      <% end %>
    </div>
  </div>
</div>
