<header class="bg-sky-500 text-white shadow-sm flex justify-between p-1">
  <div class="flex flex-col items-center space-x-3 pt-1 md:m-1">
    <!-- ロゴをテキストで「Trainspotter.」として表示 -->
    <%= link_to "Trainspotter.", root_path, class: "text-xl md:text-3xl text-white" %>
  </div>
  <div>
    <ul class="flex justify-end menu menu-horizontal md:m-2">
      <li class="hidden md:block link link-hover"><%= link_to "地図へ", '#' %></li>
      <li class="hidden md:block link link-hover"><%= link_to "アカウント登録", new_user_path %></li>
      <li class="hidden md:block link link-hover"><%= link_to "ログアウト", logout_path %></li>
      <li>
        <div class="dropdown dropdown-bottom dropdown-end">
          <div tabindex="0" role="button">
            <div class="hidden md:block">
              <div class="flex">
                マイメニュー
                <span class="material-symbols-outlined">
                  expand_more
                </span>
              </div>
            </div>

            <!-- スマホ画面ではハンバーガーメニュー -->
            <div class="md:hidden">
              <span class="material-symbols-outlined">
                menu
              </span>
            </div>

          </div>
          <ul tabindex="0" class="border dropdown-content z-[1] menu mt-2 md:mt-4 shadow bg-base-100 rounded-box w-40 md:w-52">
            <li class="no-hover">
              <div class="flex">
                <div class="avatar">
                  <div class="w-7 h-7 mr-1 rounded-full overflow-hidden">
                    <% if current_user.avatar_url.present? %>
                      <%= image_tag current_user.avatar_url, alt: 'アバター', class: 'w-full h-full object-cover' %>
                    <% else %>
                      <span class="inline-block w-full h-full bg-gray-100 rounded-full flex items-center justify-center">
                        <svg class="text-gray-300" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <rect x="0.62854" y="0.359985" width="15" height="15" rx="7.5" fill="white"></rect>
                          <path d="M8.12421 7.20374C9.21151 7.20374 10.093 6.32229 10.093 5.23499C10.093 4.14767 9.21151 3.26624 8.12421 3.26624C7.0369 3.26624 6.15546 4.14767 6.15546 5.23499C6.15546 6.32229 7.0369 7.20374 8.12421 7.20374Z" fill="currentColor"></path>
                          <path d="M11.818 10.5975C10.2992 12.6412 7.42106 13.0631 5.37731 11.5537C5.01171 11.2818 4.69296 10.9631 4.42107 10.5975C4.28982 10.4006 4.27107 10.1475 4.37419 9.94123L4.51482 9.65059C4.84296 8.95684 5.53671 8.51624 6.30546 8.51624H9.95231C10.7023 8.51624 11.3867 8.94749 11.7242 9.62249L11.8742 9.93184C11.968 10.1475 11.9586 10.4006 11.818 10.5975Z" fill="currentColor"></path>
                        </svg>
                      </span>
                    <% end %>
                  </div>
                </div>
                <%= current_user.name %>
              </div>
            </li>
            <li class="md:hidden"><%= link_to "プランをつくる", '#' %></li>
            <li><%= link_to "マイプラン", '#' %></li>
            <li class="md:hidden"><%= link_to "みんなのプラン", '#' %></li>
            <li><%= link_to "マイページ", '#' %></li>
            <li><%= link_to "ログアウト", '#', data: { turbo_method: :delete } %></li>
          </ul>
        </div>
      </li>
    </ul>
  </div>
</header>
