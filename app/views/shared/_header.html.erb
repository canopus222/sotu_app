<header class="bg-sky-500 text-white shadow-sm flex justify-between p-1">
  <div class="flex flex-col items-center space-x-3 pt-1 md:m-1">
    <!-- ロゴをテキストで「Trainspotter.」として表示 -->
    <%= link_to "Trainspotter.", root_path, class: "text-xl md:text-3xl text-white" %>
  </div>
  <div>
    <ul class="flex justify-end menu menu-horizontal md:m-2">
      <li class="hidden md:block link link-hover"><%= link_to "投稿する", new_post_path %></li>
      <li class="hidden md:block link link-hover"><%= link_to "ログアウト", logout_path, data: { turbo_method: :delete } %></li>
      <li>
        <div class="dropdown dropdown-bottom dropdown-end">
          <div tabindex="0" role="button">
            <div class="hidden md:block">
              <div class="flex items-center">
                マイメニュー
                <svg class="w-2.5 h-2.5 ms-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                 <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
                </svg>
              </div>
            </div>

            <!-- スマホ画面ではハンバーガーメニュー -->
            <div class="md:hidden">
              <span class="material-symbols-outlined">
                menu
              </span>
            </div>
          </div>

          <ul tabindex="0" class="border dropdown-content z-[1] menu mt-2 md:mt-4 shadow bg-base-100 rounded-box w-40 md:w-52 text-black">
            <li class="no-hover">
              <div class="flex">
                <div class="avatar">
                  <div class="relative w-10 h-10 overflow-hidden bg-gray-100 rounded-full dark:bg-gray-600">
                    <svg class="absolute w-12 h-12 text-gray-400 -left-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path></svg>
                  </div>
                </div>
                <%= current_user.name %>
              </div>
            </li>
            <li><%= link_to "マイページ", mypage_path %></li>
            <li class="md:hidden"><%= link_to "投稿する", new_post_path %></li>
            <li><%= link_to "Favorites一覧", favorites_path %></li>
            <li><%= link_to "Posts一覧", posts_path %></li>
            <li><%= link_to "MY Posts一覧", my_posts_path %></li>
            <li><%= link_to "MY Badges", my_badges_path %></li>
            <li class="md:hidden"><%= link_to "ログアウト", logout_path, data: { turbo_method: :delete } %></li>
          </ul>
        </div>
      </li>
    </ul>
  </div>
</header>
