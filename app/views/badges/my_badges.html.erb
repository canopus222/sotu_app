<div class="w-5/6 mx-auto my-28 max-w-screen-xl">
  <div class="text-2xl font-bold text-center text-gray-800 mb-8">マイバッジ</div>
  <div class="flex flex-wrap justify-center items-center gap-4">

    <% post_count = current_user.posts.count %>

    <%# 画像の配列を作成 %>
    <% images = ['before.png', 'before.png', 'before.png', 'before.png', 'before.png'] %>

    <%# 投稿数に応じて画像を変更 %>
    <% if current_user.posts.count >= 1 %>
      <%= image_tag 'trainstar1.png', alt: 'Trainstar 1 Badge', size: '150x150' %> 
    <% else %>
      <%= image_tag 'before.png', alt: 'Before Badge', size: '150x150' %> 
    <% end %>
    <% if current_user.posts.count >= 5 %>
      <%= image_tag 'trainstar2.png', alt: 'Trainstar 2 Badge', size: '150x150' %> 
    <% else %>
      <%= image_tag 'before.png', alt: 'Before Badge', size: '150x150' %> 
    <% end %>
    <% if current_user.posts.count >= 10 %>
      <%= image_tag 'trainstar3.png', alt: 'Trainstar 3 Badge', size: '150x150' %> 
    <% else %>
      <%= image_tag 'before.png', alt: 'Before Badge', size: '150x150' %> 
    <% end %>
    <% if current_user.posts.count >= 20 %>
      <%= image_tag 'trainstar4.png', alt: 'Trainstar 4 Badge', size: '150x150' %> 
    <% else %>
      <%= image_tag 'before.png', alt: 'Before Badge', size: '150x150' %> 
    <% end %>
    <% if current_user.posts.count >= 30 %>
      <%= image_tag 'trainstar5.png', alt: 'Trainstar 5 Badge', size: '150x150' %> 
    <% else %>
      <%= image_tag 'before.png', alt: 'Before Badge', size: '150x150' %> 
    <% end %>
  </div>
</div>
