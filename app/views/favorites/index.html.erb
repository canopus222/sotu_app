<div class="max-w-screen-3xl mx-auto px-4 py-6">
  <div class="flex flex-col md:flex-row">
    <!-- 検索フォーム -->
    <div class="mb-10 mx-auto max-w-4xl">
      <%= render 'shared/search_form', q: @q %>
    </div>

    <!-- 投稿一覧 -->
    <div class="flex-auto">
      <div class="max-w-screen-3xl mx-auto">
        <div class="text-2xl font-bold text-center pt-2 text-gray-800">お気に入りした投稿</div>
        <div class="grid gap-3 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-4 2xl:grid-cols-6 mt-4">
          <% if @favorite_posts.present? %>
            <%= render @favorite_posts %>
          <% else %>
            <div class="text-center">投稿がありません</div>
          <% end %>
        </div>
        <div class="text-xl font-bold text-center pt-6 text-gray-800">
          <%= paginate @favorite_posts %>
        </div>
      </div>
    </div>
  </div>
</div>
